{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",            // or "NodeNext" if you're ESM
    "sourceMap": true,               // <-- required for breakpoints
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src"]
}
